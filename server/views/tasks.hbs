<style>
    .taskContainer {
        display: flex;
        flex-direction: column;
        gap: 10px;
        margin-top: 15px;
    }
</style>
<section>
    <main>
        <h1>{{title}}</h1>
        <input type="text" placeholder="Заголовок задания, цена">

        <style>
            .task {
                display: flex;
                padding: 10px 5px;
            }
            .task:nth-child(even) {
                background-color: #f3f3f3;
            }
            .task span {
                color: #4f6173;
            }
            .task a {
                color: #4f6173;
            }
            .task a:hover {
                color: #2d343d;
            }

            .task-body {
                display: flex;
                flex-direction: column;
                flex: 1 1 auto;
                gap: 5px;
            }
            .task-body .title {
                font-size: 24px;
            }

            .control {
                display: flex;
                flex-direction: column;
                justify-content: space-between;
            }

            .price {
                display: flex;
                justify-content: center;
                align-items: center;
                align-self: start;
                gap: 5px;
                min-width: 140px;
            }
            .price span {
                word-break: normal;
            }

            .control a {
                padding: 10px;
                color: white;
                background-color: var(--pink);
            }
        </style>
        <div class="taskContainer">
            {{#each tasks}}
                <div class="task">
                    <div class="task-body">
                        <a class="title">{{ this.title }}</a>
                        <div class="price">
                            <span>Цена: {{this.price}} руб.</span>
                        </div>
                        <!-- TODO сделать сложный запрос -->
                        <span class="responses">5 откликов</span>

                        <span class="date">26.05.2022</span>
                        <span class="tags">{{this.tags}}</span>
                    </div>
                    <div class="control">
                        <a href="">Редактировать</a>
                    </div>
                </div>
            {{/each}}
        </div>
    </main>
    <div class="side-info"></div>
</section>
